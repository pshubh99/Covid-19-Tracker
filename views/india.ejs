<%- include('partials/header'); -%>

<% var lastIndex=indiaData["tested"].length-1 %>
<% var dateStr = indiaData["tested"][lastIndex]["updatetimestamp"] %>
<% var date=dateStr.slice(0,10)%>
<% var time=dateStr.slice(11,19)%>

<div class="container">

    <div class="text-center">
        <h1>India</h1>
    </div>
    <div class="row text-center">
        <div class="col">
            <h2>Last Updated on : <%= date%></h2>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-lg-3 col-sm-12">
            <div class="card m-2 color1">
                <div class="card-body">
                    <h4 class="card-title">Active</h4>
                    <p class="card-text number"><%= indiaData["statewise"][0]["active"] %></p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-12">
            <div class="card m-2 color3">
                <div class="card-body">
                    <h4 class="card-title">Confirmed</h4>
                    <p class="card-text number"><%= indiaData["statewise"][0]["confirmed"] %></p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-12">
            <div class="card m-2 color2">
                <div class="card-body">
                    <h4 class="card-title">Deaths</h4>
                    <p class="card-text number"><%= indiaData["statewise"][0]["deaths"] %></p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-12">
            <div class="card m-2 color4">
                <div class="card-body">
                    <h4 class="card-title">Recovered</h4>
                    <p class="card-text number"><%= indiaData["statewise"][0]["recovered"] %></p>
                </div>
            </div>
        </div>
    </div>

    <table class="table text-center" style="border-collapse: separate; border-spacing: 0 10px ;">
        <thead>
            <tr class="bg-info text-white">
                <th scope="col" class="column2">State/UT</th>
                <th scope="col">Active</th>
                <th scope="col">Confirmed</th>
                <th scope="col">Death</th>
                <th scope="col">Recovered</th>
            </tr>
        </thead>

        <tbody>
            <% for(var i=1;i< indiaData["statewise"].length;i++){ %>
            <tr>

                <td class="states"><%= indiaData["statewise"][i]["state"] %></td>
                <td class="active"><%= indiaData["statewise"][i]["active"] %></td>
                <td class="confirmed"><%= indiaData["statewise"][i]["confirmed"] %></td>
                <td class="deaths"><%= indiaData["statewise"][i]["deaths"] %></td>
                <td class="recovered"><%= indiaData["statewise"][i]["recovered"] %></td>
            </tr>
            <% } %>
        </tbody>
    </table>



    <%- include('partials/footer'); -%>